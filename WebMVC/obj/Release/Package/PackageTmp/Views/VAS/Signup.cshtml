
@{
    ViewBag.Title = "Signup";
}

<script src="~/assets/scripts/Signup.js"></script>
<!-- BANNER
================================================== -->
<div class="banner banner--small" role="banner">
    <div class="banner__background" style="background-image:url(/assets/images/banner-contact.jpg);" data-type="background"></div>
    <div class="banner__content">
        <h2 class="banner__headline alpha">Visual Analog Scale (VAS)</h2>
    </div>
</div><!--/banner -->

<main role="main" id="main">
    <!--Verify Email
    ================================================== -->
    <article class="section section--small">
        <div class="container container--small">
            <div class="section__header section__header--centered">
                <img src="~/assets/images/email-logo.jpg" width="200" />
                <h2 class="section__heading" id="head1">Sign Up</h2>
                <p class="lead" id="head2">Please enter your Email and Password.</p>
            </div>

            <form action="" id="Signup">
                <div class="grid" id="Formgird">
                    
                    <div class="grid__column grid__column--12 grid__column--12--sm">
                        <div class="control" id="divEmail">
                            <label for="User-Email" class="control__label control__label--is-required">Email Address</label>
                            <input type="email" class="control__input" id="User-Email">
                            <p id="msg-email" style="color:#ff0000; margin:0px; font-style:italic"></p>
                        </div>
                    </div>
                    <div class="grid__column grid__column--12 grid__column--6--sm">
                        <div class="control" id="divPwd">
                            <label for="User-Pwd" class="control__label control__label--is-required">Password</label>
                            <input type="password" class="control__input" id="User-Pwd">
                            <p id="msg-Pwd" style="color:#ff0000; margin:0px; font-style:italic"></p>
                        </div>
                    </div>
                    <div class="grid__column grid__column--12 grid__column--6--sm">
                        <div class="control" id="divConfirmPwd">
                            <label for="User-ConfirmPwd" class="control__label control__label--is-required">Confirm Password</label>
                            <input type="password" class="control__input" id="User-ConfirmPwd">
                            <p id="msg-ConfirmPwd" style="color:#ff0000; margin:0px; font-style:italic"></p>
                        </div>
                    </div>

                    <div class="grid__column grid__column--12 grid__column--6--sm">
                        <button class="btn" id="btnSubmit" type="submit" value="btnSubmit">Submit</button>
                    </div>
                </div>
            </form>

        </div>
    </article><!--/Verify Email-->
</main>

