
@{
    ViewBag.Title = "VerifyEmail";
}
<script src="~/assets/scripts/VerifyEmail.js"></script>
<!-- BANNER
================================================== -->
<div class="banner banner--small" role="banner">
    <div class="banner__background" style="background-image:url(/assets/images/banner-contact.jpg);" data-type="background"></div>
    <div class="banner__content">
        <h2 class="banner__headline alpha">Visual Analog Scale (VAS)</h2>
    </div>
</div><!--/banner -->

<main role="main" id="main">
    <!--Verify Email
    ================================================== -->
    <article class="section section--small">
        <div class="container container--small">
            <div class="section__header section__header--centered">
                <img src="~/assets/images/email-logo.jpg" width="200"/>
                <h2 class="section__heading">Email Verfication</h2>
                <p class="lead" style="text-align: left">Please enter your Email. We will send you a one time Varification code as the password for your first login.</p>
            </div>

            <form action="" id="VerifyEmail">
                <div class="grid" id="Formgird">
                    <div class="grid__column grid__column--12 grid__column--12--lg">
                        <div class="control">
                            <label for="User-Email" class="control__label control__label--is-required">Email Address</label>
                            <input type="email" class="control__input" id="User-Email">
                            <p id="msg-email" style="color:#ff0000; margin:0px; font-style:italic"></p>
                        </div>
                    </div>
                    <div class="grid__column grid__column--12 grid__column--12--lg">
                        <div class="control">
                            <label for="User-code" class="control__label control__label--is-required">Invite code</label>
                            <input type="text" class="control__input" id="User-code">
                            <p id="msg-code" style="color:#ff0000; margin:0px; font-style:italic"></p>
                        </div>
                    </div>

                    <div class="grid__column grid__column--12 grid__column--12--lg">
                        <div class="control" id="divPwd">

                        </div>
                    </div>

                    <div class="grid__column grid__column--12 grid__column--12--lg">
                        <button class="btn" id="btnSubmit" type="submit" value="btnSubmit">Verify</button>
                    </div>
                    <div class="grid__column grid__column--12 grid__column--12--lg">
                        <button class="btn" id="btnSignin" type="submit" style="display:none" value="btnSignin">Sign in</button>
                    </div>
                </div>
            </form>

        </div>
    </article><!--/Verify Email-->
</main>